<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Style Guide</title>
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    *@application_css %>
    <%= stylesheet_link_tag    "style_guide/application" %>
    <%= javascript_include_tag "style_guide/application" %>
    <%= yield :head %>
  </head>
  <body class="style-guide">
    <div class="style-guide-bar">
      <div class="style-guide-bar-container">
        <label class="style-guide-navigation-button" for="style-guide-checkbox">&#x2630;</label>
        <input id="style-guide-checkbox" type="checkbox" />
        <div class="style-guide-bar-sections">
          <div class="style-guide-bar-section">
            <a href="#" id="style-guide-open-windows">Responsive</a>
          </div>
        <% @sections.each do |section| %>
          <div class="style-guide-bar-section <%= (section == @current_section) ? 'active' : '' %>">
            <a href="<%= style_guide_section_path(section.id) %>"><%= section.title %></a>
            <% if section.subsections.any? %>
             <div class="style-guide-bar-subsections">
              <% section.subsections.each do |subsection| %>
                <div class="style-guide-bar-subsection <%= (subsection == @current_subsection) ? 'active' : '' %>">
                  <a href="<%= style_guide_subsection_path(section_id: section.id, id: subsection.id) %>"><%= subsection.title %></a>
                </div>
              <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>

<%= yield %>
  </body>
</html>
